extends layout

block content
	.w3-card-4
		header.w3-container.w3-teal
			h1= title
		.w3-container
			p Nome: #{pessoa.nome}
			p Idade: #{pessoa.idade}
			//- p DescriÃ§Ã£o: #{pessoa.descriÃ§Ã£o.join(separator)}
			p Morada:
				.w3-container
					p Cidade: #{pessoa.morada.cidade}
					p Distrito: #{pessoa.morada.distrito}
			p BI: #{pessoa.BI}
			p CC: #{pessoa.CC}
			p ProfissÃ£o: #{pessoa.profissao}
			p Partido politico
				.w3-container
					p Sigla: #{pessoa.partido_politico.party_abbr}
					p Nome: #{pessoa.partido_politico.party_name}
			p Religiao: #{pessoa.religiao}
			p Desportos:
			ul.w3-ul
				each desporto in pessoa.desportos
					li
						a(href="/modalidades/" + desporto)= desporto

			p Animais:
			ul.w3-ul
				each animal in pessoa.animais
					li
						p #{animal}

			p Figuras publicas portuguesas:
			ul.w3-ul
				each fig in pessoa.figura_publica_pt
					li
						p #{fig}

			p Marca do carro: #{pessoa.marca_carro}
			p Destinos favoritos:
			ul.w3-ul
				each dest in pessoa.destinos_favoritos
					li
						p #{dest}
			p Atributos:
				.w3-container
					if pessoa.atributos.fumador
						input.w3-input.w3-botder(type="checkbox" disabled checked)
						| Fumador
					else
						input.w3-input.w3-botder(type="checkbox" disabled)
						| Fumador

					if pessoa.atributos.gosta_cinema
						input.w3-input.w3-botder(type="checkbox" disabled checked)
						| Gosta de cinema
					else
						input.w3-input.w3-botder(type="checkbox" disabled)
						| Gosta de cinema
					if pessoa.atributos.gosta_viajar
						input.w3-input.w3-botder(type="checkbox" disabled checked)
						| Gosta de viajar
					else
						input.w3-input.w3-botder(type="checkbox" disabled)
						| Gosta de viajar
					if pessoa.atributos.acorda_cedo
						input.w3-input.w3-botder(type="checkbox" disabled checked)
						| Acorda cedo
					else
						input.w3-input.w3-botder(type="checkbox" disabled)
						| Acorda cedo
					if pessoa.atributos.gosta_ler
						input.w3-input.w3-botder(type="checkbox" disabled checked)
						| Gosta de ler
					else
						input.w3-input.w3-botder(type="checkbox" disabled)
						| Gosta de ler
					if pessoa.atributos.gosta_musica
						input.w3-input.w3-botder(type="checkbox" disabled checked)
						| Gosta de musica
					else
						input.w3-input.w3-botder(type="checkbox" disabled)
						| Gosta de musica
					if pessoa.atributos.gosta_animais_estimacao
						input.w3-input.w3-botder(type="checkbox" disabled checked)
						| Gosta de animais de estimacao
					else
						input.w3-input.w3-botder(type="checkbox" disabled)
						| Gosta de animais de estimacao
					if pessoa.atributos.gosta_dancar
						input.w3-input.w3-botder(type="checkbox" disabled checked)
						| Gosta de dancar
					else
						input.w3-input.w3-botder(type="checkbox" disabled)
						| Gosta de dancar
					p Comida favorita: #{pessoa.atributos.comida_favorita}

