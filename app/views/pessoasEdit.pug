extends layout

block content
	.w3-card-4
		header.w3-container.w3-teal
			h1= title
		.w3-container
			form.w3-container.w3-card-4(method="post" action="/pessoas/edit")
				br
				p
					label.w3-text-grey Nome
					input.w3-input.w3-border(type="text"  name="nome" value=pessoa.nome)
				p
					label.w3-text-grey Idade
					input.w3-input.w3-border(type="text"  name="idade" value=pessoa.idade)
				p
					label.w3-text-grey Descrição
					textarea.w3-input.w3-border(rows="4" cols="50"  name="descrição")= pessoa.descrição
				p
					label.w3-text-grey Morada
						label.w3-text-grey Cidade
							input.w3-input.w3-border(type="text"  name="morada_cidade" value=pessoa.morada.cidade)
						label.w3-text-grey Distrito
							input.w3-input.w3-border(type="text"  name="morada_distrito" value=pessoa.morada.distrito)
				//- falta aqui uma maneira de selecionar BI vs CC???????
				p
					label.w3-text-grey BI
					input.w3-input.w3-border(type="text"  name="BI" value=pessoa.BI)
				p
					label.w3-text-grey CC
					input.w3-input.w3-border(type="text"  name="CC" value=pessoa.CC)
				p
					label.w3-text-grey Profissão
					input.w3-input.w3-border(type="text"  name="profissao" value=pessoa.profissao)
				p
					label.w3-text-grey Partido politico
						label.w3-text-grey Sigla
							input.w3-input.w3-border(type="text"  name="partido_politico_party_abbr" value=pessoa.partido_politico.party_abbr)
						label.w3-text-grey Nome
							input.w3-input.w3-border(type="text"  name="partido_politico_party_name" value=pessoa.partido_politico.party_name)
				p
					label.w3-text-grey Religiao
					input.w3-input.w3-border(type="text"  name="religiao" value=pessoa.religiao)
				p
					label.w3-text-grey Desportos (separar por linha)
					textarea.w3-input.w3-border(rows="4" cols="50"  name="desportos")= pessoa.desportos.join("\n")
				p
					label.w3-text-grey Animais (separar por linha)
					textarea.w3-input.w3-border(rows="4" cols="50"  name="animais")= pessoa.animais.join("\n")
				p
					label.w3-text-grey Figuras publicas portuguesas (separar por linha)
					textarea.w3-input.w3-border(rows="4" cols="50"  name="figura_publica_pt")= pessoa.figura_publica_pt.join("\n")
				p
					label.w3-text-grey Marca do carro
					input.w3-input.w3-border(type="text"  name="marca_carro" value=pessoa.marca_carro)
				p
					label.w3-text-grey Destinos favoritos (separar por linha)
					textarea.w3-input.w3-border(rows="4" cols="50"  name="destinos_favoritos")= pessoa.destinos_favoritos.join("\n")
				p
					//- https://www.w3schools.com/tags/att_input_type_checkbox.asp
					label.w3-text-grey Atributos
						input.w3-input.w3-botder(type="checkbox" name="atributos_fumador" value=pessoa.atributos.fumador)
						| Fumador
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_cinema" value=pessoa.atributos.gosta_cinema)
						| Gosta de cinema
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_viajar" value=pessoa.atributos.gosta_viajar)
						| Gosta de viajar
						input.w3-input.w3-botder(type="checkbox" name="atributos_acorda_cedo" value=pessoa.atributos.acorda_cedo)
						| Acorda cedo
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_ler" value=pessoa.atributos.gosta_ler)
						| Gosta de ler
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_musica" value=pessoa.atributos.gosta_musica)
						| Gosta de musica
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_animais_estimacao" value=pessoa.atributos.gosta_animais_estimacao)
						| Gosta de animais de estimacao
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_dancar" value=pessoa.atributos.gosta_dancar)
						| Gosta de dancar
						input.w3-input.w3-border(type="text"  name="atributos_comida_favorita" value=pessoa.atributos.comida_favorita)
						| Comida favorita
				p
					button.w3-btn.w3-padding.w3-teal(type="submit" style="width:120px") Send &nbsp; ❯


		footer.w3-container.w3-teal
			h5 Generated by EngWeb2024::FichaAfericao
