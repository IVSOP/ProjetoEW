extends layout

block content
	.w3-card-4
		header.w3-container.w3-teal
			h1= title
		.w3-container
			table.w3-table.w3-striped.w3-bordered.w3-hoverable
				tr
					th Nome
					th Coisa qualquer

				each pessoa in pessoas
					tr
						td
							a(href="/pessoas/" + pessoa.nome)= pessoa.nome
						td
							p Coisa qualquer!

			a(href="/pessoas/create")
				button.w3-button.w3-purple.botao-submit(type="button") +
            
		footer.w3-container.w3-teal
