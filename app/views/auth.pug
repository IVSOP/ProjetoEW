extends layout

block content

    .container.d-flex.justify-content-center.flex-column.vh-100.mt-3.w-50

        .card.text-center
            .card-header.d-flex.justify-content-between
                ul.nav.nav-pills.card-header-pills
                    li.nav-item
                        a.nav-link(href='/login' class=title == 'Login' ? 'active' : '') Login
                    li.nav-item
                        a.nav-link(href='/registar' class=title == 'Registar' ? 'active' : '') Registar
                h4.d-flex.align-items-center.mb-0.fw-bold
                    | Plataforma das Ruas de Braga

            .card-body
                form(method="post")
                    .form-group
                        input.form-control.mt-1(type='email', name='email', placeholder='Email', required)
                    .form-group
                        input.form-control.mt-3(type='password', name='password', placeholder='Password', required)  
                    button.btn.btn-secondary.btn-block.w-100.mt-3(type='submit')
                        | Entrar