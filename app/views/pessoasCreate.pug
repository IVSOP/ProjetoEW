extends layout

block content
	.w3-card-4
		header.w3-container.w3-teal
			h1= title
		.w3-container
			form.w3-container.w3-card-4(method="post" action="/pessoas/create")
				br
				p
					label.w3-text-grey Nome
					input.w3-input.w3-border(type="text" required name="nome")
				p
					label.w3-text-grey Idade
					input.w3-input.w3-border(type="text" required name="idade")
				p
					label.w3-text-grey Descrição
					textarea.w3-input.w3-border(rows="4" cols="50" required name="descrição")

				//- CUIDADO tava me a bugar com labels dentro de labels entao so separei tudo
				//- embora tenha labels dentro de labels porque deve ficar mais bonito, cuidado com o nome
				//- vai ser preciso processar estes dados do outro lado
				p
					label.w3-text-grey Morada
						label.w3-text-grey Cidade
							input.w3-input.w3-border(type="text" required name="morada_cidade")
						label.w3-text-grey Distrito
							input.w3-input.w3-border(type="text" required name="morada_distrito")
				//- falta aqui uma maneira de selecionar BI vs CC???????
				p
					label.w3-text-grey BI
					input.w3-input.w3-border(type="text" required name="BI")
				p
					label.w3-text-grey CC
					input.w3-input.w3-border(type="text" required name="CC")
				p
					label.w3-text-grey Profissão
					input.w3-input.w3-border(type="text" required name="profissao")
				p
					label.w3-text-grey Partido politico
						label.w3-text-grey Sigla
							input.w3-input.w3-border(type="text" required name="partido_politico_party_abbr")
						label.w3-text-grey Nome
							input.w3-input.w3-border(type="text" required name="partido_politico_party_name")
				p
					label.w3-text-grey Religiao
					input.w3-input.w3-border(type="text" required name="religiao")

				//- desportos ficam separados por \n
				p
					label.w3-text-grey Desportos (separar por linha)
					textarea.w3-input.w3-border(rows="4" cols="50" required name="desportos")
				p
					label.w3-text-grey Animais (separar por linha)
					textarea.w3-input.w3-border(rows="4" cols="50" required name="animais")
				p
					label.w3-text-grey Figuras publicas portuguesas (separar por linha)
					textarea.w3-input.w3-border(rows="4" cols="50" required name="figura_publica_pt")
				p
					label.w3-text-grey Marca do carro
					input.w3-input.w3-border(type="text" required name="marca_carro")
				p
					label.w3-text-grey Destinos favoritos (separar por linha)
					textarea.w3-input.w3-border(rows="4" cols="50" required name="destinos_favoritos")
				p
					//- https://www.w3schools.com/tags/att_input_type_checkbox.asp
					label.w3-text-grey Atributos
						input.w3-input.w3-botder(type="checkbox" name="atributos_fumador")
						| Fumador
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_cinema")
						| Gosta de cinema
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_viajar")
						| Gosta de viajar
						input.w3-input.w3-botder(type="checkbox" name="atributos_acorda_cedo")
						| Acorda cedo
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_ler")
						| Gosta de ler
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_musica")
						| Gosta de musica
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_animais_estimacao")
						| Gosta de animais de estimacao
						input.w3-input.w3-botder(type="checkbox" name="atributos_gosta_dancar")
						| Gosta de dancar
						input.w3-input.w3-border(type="text" required name="atributos_comida_favorita")
						| Comida favorita
				p
					button.w3-btn.w3-padding.w3-teal(type="submit" style="width:120px") Send &nbsp; ❯


		footer.w3-container.w3-teal
